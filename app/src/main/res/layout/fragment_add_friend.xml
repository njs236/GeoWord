<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AddFriendFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:id="@+id/add_friend_title"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/friend_title"/>
    <EditText android:id="@+id/add_friend_etEmail"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:hint="@string/hint_addemail"/>
        <Button android:id="@+id/add_friend_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit"/>
    </LinearLayout>

    <ListView
            android:id="@+id/listViewRecommendedFriendsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </ListView>
    </LinearLayout>

</FrameLayout>